<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- xml를 활용한 공통 코드 -->
<mapper namespace="com.movieproject.mapper.MainMapper"><!-- 호출 될 메서드의 인터페이스명 일치 -->

	<sql id="criteria">
		<trim prefix="(" suffix=") AND " prefixOverrides="OR">
			<foreach item='type' collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type == 'T'.toString()">
							movie_title like '%'||#{keyword}||'%'
						</when>
						<when test="type == 'C'.toString()">
							movie_content like '%'||#{keyword}||'%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>
	
	<select id="read" resultType="com.movieproject.domain.MovieVO">
		select * from movie where movie_id =
		#{movie_id}
	</select>

	<select id="getMlist"
		resultType="com.movieproject.domain.MovieVO"><!-- id=메서드명, resultType=리턴 -->
		<![CDATA[
		select * from movie where movie_id > 0
		]]>
	</select>

	<select id="getMlistWithPaging"	resultType="com.movieproject.domain.MovieVO">
  	<![CDATA[
  		select 
  		  movie_id, movie_title, movie_content
  		from 
   		   (
     		 select 
       		 rownum rn, movie_id, movie_title, movie_content
     	from 
       		 movie
    	where 
  	]]>
		<trim prefix="(" suffix=") AND " prefixOverrides="OR">
			<foreach item='type' collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type == 'T'.toString()">
							movie_title like '%'||#{keyword}||'%'
						</when>
						<when test="type == 'C'.toString()">
							movie_content like '%'||#{keyword}||'%'
						</when>
						<!-- <when test="type == 'W'.toString()">
							writer like '%'||#{keyword}||'%'
						</when> -->
					</choose>
				</trim>
			</foreach>
		</trim>
      
  <![CDATA[    
      rownum <= #{pageNum} * #{amount}
      )
  where rn > (#{pageNum} -1) * #{amount}   
  ]]>
	</select>

	<select id="getTotalCount" resultType="int">
		select count(*) from movie where

		<include refid="criteria"></include>

		movie_id > 0

	</select>



</mapper>